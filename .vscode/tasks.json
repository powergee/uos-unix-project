{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Execute exe",
            "command": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "group": "test"
        }
    ]
}